// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Region {
  SUL
  SUDESTE
  NORTE
  NORDESTE
  CENTROOESTE
}

model User{
  id        String @id @default(uuid())
  name      String 
  country   String
  email     String? //optional
  birthDate DateTime
  region    Region 
  phone     String?
}